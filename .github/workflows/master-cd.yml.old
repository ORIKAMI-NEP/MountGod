name: master CD

on:
  push:
    branches:
      - master

jobs:
  master-cd:
    runs-on: ubuntu-latest
    steps:
      - name: master CD
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.HOST }}
          username: ${{ secrets.USERNAME }}
          port: ${{ secrets.PORT }}
          key: ${{ secrets.KEY }}
          script: |
            cd ~/discord-bot/
            git reset --hard origin/master
